{
  "name": "puzzle-framework-lite",
  "version": "1.3.0",
  "description": "A lite modular framework for micro applications/services.",
  "main": "src/index.js",
  "scripts": {
    "test": "./node_modules/.bin/nyc ./node_modules/.bin/mocha --exit tests/**/*.test.js",
    "lint": "./node_modules/.bin/eslint ./src",
    "lint-fix": "./node_modules/.bin/eslint --fix ./src",
    "bamboo-lint": "./node_modules/.bin/eslint ./src -f node_modules/eslint-bamboo-formatter/reporter.js",
    "jsdoc": "./node_modules/.bin/jsdoc -p -c ./jsdoc.json ./src",
    "coverage": "./node_modules/.bin/nyc report --reporter=text-lcov | ./node_modules/.bin/coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spark-development/puzzle-framework-lite.git"
  },
  "keywords": [
    "puzzle",
    "framework",
    "micro-apps",
    "micro-services",
    "modular framework",
    "http",
    "web",
    "lite framework"
  ],
  "author": "Valentin Duricu <valentin.duricu@spark-dev.ro>",
  "bugs": "https://github.com/spark-development/puzzle-framework/issues",
  "license": "MIT",
  "homepage": "https://puzzle.spark-dev.ro/lite",
  "dependencies": {
    "body-parser": "^1.18.2",
    "cli": "^1.0.1",
    "consign": "^0.1.6",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-hbs": "^1.0.4",
    "express-session": "^1.15.6",
    "handlebars": "^4.0.11",
    "i18n": "^0.8.3",
    "lodash": "^4.17.10",
    "log": "^1.4.0",
    "logrotator": "^1.1.0",
    "socket.io": "^2.1.0",
    "verbal-expressions": "^0.3.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "debug": "^3.1.0",
    "eslint": "^4.19.1",
    "eslint-bamboo-formatter": "0.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "husky": "^0.14.3",
    "ink-docstrap": "^1.3.2",
    "jsdoc": "^3.5.5",
    "mocha": "^5.1.1",
    "mocha-bamboo-reporter": "^1.1.1",
    "nyc": "^11.7.1"
  },
  "files": [
    "src",
    "dist"
  ],
  "directories": {
    "doc": "docs",
    "example": "sample",
    "test": "tests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
